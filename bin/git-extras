#!/usr/bin/env bash

VERSION="2.2.0"

update() {
  local bin=$(which git-extras)
  local prefix=${bin%/*/*}
  local orig=$PWD

  cd /tmp \
    && rm -fr ./git-extras \
    && git clone --depth 1 https://github.com/tj/git-extras.git \
    && cd git-extras \
    && PREFIX="$prefix" make install \
    && cd "$orig" \
    && echo "... updated git-extras $VERSION -> $(git extras --version)"
}

case "$1" in
  -v|--version)
    echo $VERSION && exit 0
    ;;
  update)
    update
    ;;
  *)
    man git-extras
    ;;
esac
